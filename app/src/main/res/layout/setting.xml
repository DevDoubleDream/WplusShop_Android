<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/header_single"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="#f0f0f0">
            <LinearLayout
                android:id="@+id/lyt_btn_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="버전 정보"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txt_version_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_version"
                        android:textSize="18sp"
                        android:textColor="#4fa9ff"/>
                    <ImageView
                        android:id="@+id/img_version_bullet"
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_autologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:onClick="btnClick">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자동 로그인"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/txt_autologin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:onClick="btnClick">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알림 설정"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/txt_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:onClick="btnClick">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="암호 잠금"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical">
                    <TextView
                        android:id="@+id/txt_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_domain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:onClick="btnClick">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쇼핑몰 설정"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_domain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#f34950"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="1dp"
                android:padding="16dp"
                android:background="@drawable/btn_color_selector"
                android:onClick="btnClick">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공지 사항"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"/>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="18dp"
                        android:src="@drawable/setting_bullet"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>